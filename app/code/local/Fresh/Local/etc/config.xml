			<customer_save_before>
				<observers>
					<fresh_format_data>
						<type>singleton</type>
						<class>Fresh_Local_Model_Observer</class>
						<method>customerFormatData</method>
					</fresh_format_data>
				</observers>
			</customer_save_before>
			<controller_action_layout_generate_xml_before>
				<observers>
					<noindex>
						<type>singleton</type>
						<class>Fresh_Local_Model_Observer</class>
						<method>changeRobots</method>
					</noindex>
				</observers>
			</controller_action_layout_generate_xml_before>
