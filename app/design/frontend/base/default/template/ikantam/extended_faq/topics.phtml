<div class="faq-topics" id="topics">
	<?php foreach ($this->getCategories() as $category) : ?>
		<?php if ($this->getQuestions($category->getId())->getSize()) : ?>
		<h4>
			<a href="javascript:void(0);" onclick="slide_up('category<?php echo $category->getId(); ?>')">
				<?php echo $this->htmlEscape($category->getTitle()); ?>
			</a>
		</h4>
	
		<div style="display:none;" id="category<?php echo $category->getId(); ?>">
			<ol>
				<?php $count = 1; ?>
				<?php foreach ($this->getQuestions($category->getId()) as $question) : ?>
					<li>
						<a href="<?php echo $this->__('#%s-%d', $this->getAnchor($category), $count); ?>">
						<?php echo $this->__("%d. %s", $count++, $this->htmlEscape($question->getQuestion())); ; ?>
					</a></li>
				<?php endforeach; ?>
			<ol>
		</div>
		<?php endif; ?>
	<?php endforeach; ?>
</div>


<script>
	function slide_up(element){
		new Effect.toggle(element, 'Slide', {duration:0.25});
	}
</script>
