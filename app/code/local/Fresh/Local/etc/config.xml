    <global>
		<rewrite>
            <customaccountedit>
                <from><![CDATA[#^/customer/account/#]]></from>
                <to>/freshlocal/customer_account/</to>
            </customaccountedit>
			<customaccountaddress>
                <from><![CDATA[#^/customer/address/#]]></from>
                <to>/freshlocal/customer_address/</to>
            </customaccountaddress>
        </rewrite>
	   <models>
            <fresh_local>
                <class>Fresh_Local_Model</class>
                <resourceModel>fresh_local_resource</resourceModel>
            </fresh_local>
            <fresh_local_resource>
                <class>Fresh_Local_Model_Resource</class>
            </fresh_local_resource>
        </models>
        <resources>
            <fresh_local_setup>
                <setup>
                    <module>Fresh_Local</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </fresh_local_setup>
            <fresh_local_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </fresh_local_write>
            <fresh_local_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </fresh_local_read>
        </resources>
        <blocks>
            <fresh_local>
                <class>Fresh_Local_Block</class>
            </fresh_local>
			<core>
				<rewrite>
					<messages>Fresh_Local_Block_Core_Messages</messages>
				</rewrite>
			</core>
			<directory>
				<rewrite>
					<data>Fresh_Local_Block_Directory_Data</data>
				</rewrite>
			</directory>
			<customer>
                <rewrite>
                    <account_navigation>Fresh_Local_Block_Account_Navigation</account_navigation>
                </rewrite>
            </customer>
			<catalog>
                <rewrite>
                    <product_view>Fresh_Local_Block_Catalog_Product_View</product_view>
                </rewrite>
            </catalog>
			<checkout>
                <rewrite>
                    <onepage>Fresh_Local_Block_Checkout_Onepage</onepage>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <fresh_local>
                <class>Fresh_Local_Helper</class>
            </fresh_local>
			<customer>
				<rewrite>
					<data>Fresh_Local_Helper_Customer_Data</data>
				</rewrite>
			</customer>
        </helpers>
 		<events>
