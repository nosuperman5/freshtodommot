<?php foreach ($this->getCategories() as $category) : ?>
	<?php if ($this->getQuestions($category->getId())->getSize()) : ?>
		<h4><?php echo $this->htmlEscape($category->getTitle()); ?></h4>
	
		<?php $count = 1; ?>
		<?php foreach ($this->getQuestions($category->getId()) as $question) : ?>
			<div id="<?php echo $this->__('%s-%d', $this->getAnchor($category), $count); ?>">
				<p>
					<?php echo $this->__("%d. %s", $count++, nl2br($this->htmlEscape($question->getQuestion()))); ; ?>
					<a class="back-to-top" href="#topics"><?php echo $this->__('(back to top)'); ?></a>
				</p>
				<p><?php echo nl2br($this->htmlEscape($question->getAnswer())); ?></p>
			</div>
		<?php endforeach; ?>
	<?php endif; ?>
<?php endforeach; ?>
