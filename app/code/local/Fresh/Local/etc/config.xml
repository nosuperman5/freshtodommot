		</events>
		<page>
		   <layouts>
				<homepage>
					<label>Homepage layout</label>
					<template>page/homepage.phtml</template>
					<layout_handle>homepage</layout_handle>
				</homepage>
		   </layouts>
		</page>
    </global>
