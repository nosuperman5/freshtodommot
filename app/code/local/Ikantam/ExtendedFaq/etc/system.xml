<config>
	<tabs>
		<ikantam translate="label" module="extendedfaq">
			<label>Ikantam</label>
			<sort_order>9999999</sort_order>
		</ikantam>
	</tabs>
	<sections>
        <ikantam_extendedfaq translate="label" module="extendedfaq">
            <label>Extended FAQ</label>
            <tab>ikantam</tab>
            <frontend_type>text</frontend_type>
            <sort_order>2323</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
				<options translate="label">
                    <label>Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</enabled>
						<url translate="label comment">
							<label>FAQ URL</label>
							<comment>leave blank for faq as default URL</comment>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</url>
						<url_title translate="label comment">
							<label>URL Title</label>
							<comment>leave blank for FAQ as default title</comment>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</url_title>
						<meta_title translate="label">
							<label>Meta Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</meta_title>
						<meta_keywords translate="label">
							<label>Meta Keywords</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</meta_keywords>
						<meta_description translate="label comment">
							<label>Meta Description</label>
							<comment>maximum 255 chars</comment>
							<validate>validate-length maximum-length-255</validate>
							<frontend_type>textarea</frontend_type>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</meta_description>
					</fields>
                </options>
			</groups>
        </ikantam_extendedfaq>
    </sections> 
</config>
