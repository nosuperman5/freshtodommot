<?php 
    $_product = $this->getProduct();
    $qty = intval($this->getRequest()->getParam('qty', false));
    if ($qty==0) $qty = $this->getProductDefaultQty() * 1;
?>
<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <?php if(!$_product->isGrouped()): ?>
        <label for="qty"><?php echo $this->__('Qty:') ?></label>
        <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $qty ?>" title="<?php echo $this->escapeHtml($this->__('Qty')) ?>" class="input-text qty" />
        <?php endif; ?>        
        <button type="button" title="<?php echo $this->escapeHtml($this->__('Add to List')) ?>" onclick="if (productAddToListForm.validator.validate()) ShoppingList.showLists('');" class="button btn-add"><span><?php echo $this->__('Add to List') ?></span></button>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>