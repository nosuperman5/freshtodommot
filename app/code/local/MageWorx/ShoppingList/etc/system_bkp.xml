<config>
    <sections>
        <mageworx_customers translate="label" module="shoppinglist">
            <label>Mageworx Shoppinglist</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>140</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <shoppinglist translate="label" module="shoppinglist">
                    <label>Shopping List</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <scope translate="label">
                            <label>Shopping List Scope</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mageworx/system_config_source_shoppinglist_scope</source_model>                            
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </scope>
                    </fields>
                </shoppinglist>
            </groups>
        </mageworx_customers>
    </sections>
</config>